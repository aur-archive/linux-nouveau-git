pkgname=linux-nouveau-git
kernver=3.0.0

post_install () {
	echo ">"
	echo "> Updating module dependencies. Please wait ..."
	/sbin/depmod $kernver

	echo ">"
	echo "> Generating initramfs, using mkinitcpio.  Please wait..."
	echo ">"
	/sbin/mkinitcpio -p $pkgname
}

post_upgrade() {
	post_install
}

post_remove() {
	rm -f -- "/boot/initramfs-$pkgname.img"
}
